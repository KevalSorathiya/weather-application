    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text"  placeholder="Enter Your city" id="cityName" autocomplete="off">
                        <input type="submit" value="search" id="submitButton">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">25 June</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Out put here</p>
                        <div class="middle_layer  data_hide">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
